<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contatos</h1>
      <p class="text-center lead">Crie ou edite seus contatos abaixo.</p>

      <%- include('includes/messages'); %>

        <form action="/contact/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <label>Nome</label>
                <input value="<%= contact.name %>" type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label>Sobrenome</label>
                <input value="<%= contact.surname %>" type="text" class="form-control" name="surname">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input value="<%= contact.email %>" type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Telefone</label>
                <input value="<%= contact.phoneNumber %>" type="tel" class="form-control" name="phoneNumber">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer'); %>