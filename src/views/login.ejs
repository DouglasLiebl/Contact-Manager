<%- include("includes/head"); %>

<div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
  
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie sua conta.</p>
  
        <div class="row">

            <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não possui uma conta, preencha o formulário abaixo:</p>
                <form action="/login/register" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                      <label>Sua Senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Cria minha conta</button>
                </form>
            </div>

            <div class="col-lg">
                <h4>Faça seu login</h4>
                <p>Se você já possui uma conta, faça login abaixo:</p>
                <form action="/login/login" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                      <label>Sua Senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Cria minha conta</button>
                </form>
            </div>
        </div>
      </div>
  
      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include("includes/footer"); %>